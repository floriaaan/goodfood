{
  "extends": ["next", "prettier"],
  "plugins": ["@typescript-eslint", "prettier", "plugin:@tanstack/eslint-plugin-query/recommended"],
  "root": true,
  "rules": {
    "no-console": "error",
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "globals": {
    "JSX": "readonly"
  }
}
